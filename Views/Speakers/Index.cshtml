 @model Audio_Speaker.Models.AudioSpeakerViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <form asp-controller="Speakers" asp-action="Index" method="get">
        <p>
            <select asp-for="SpeakerCompany" asp-items="Model.Company">
                <option value="">All</option>
            </select>
            Name: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Speakers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speakers[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speakers[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speakers[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speakers[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speakers[0].Rating)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Speakers)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
